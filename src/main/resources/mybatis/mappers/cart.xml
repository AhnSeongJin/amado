		<collection property="product" resultMap="productResult"/>
	</resultMap> -->
	
	<select id="selectCartList"  parameterType="cartVO"  resultMap="cartResult"   >
	    <![CDATA[
			select * from cart
			where id=#{id} 
		]]>
	</select>
	
