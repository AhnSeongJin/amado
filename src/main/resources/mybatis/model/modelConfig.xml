<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration 	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<settings>
		<!-- 전통적 DB 컴럼명을 JAVA의 Camel표기법으로 자동 매핑 설정 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<typeAlias type="com.myspring.myapp.member.vo.MemberVO"  alias="memberVO" />
		<typeAlias type="com.myspring.myapp.product.vo.ProductVO" alias="productVO" />
		<typeAlias type="com.myspring.myapp.cart.vo.CartVO" alias="cartVO" />
		<typeAlias type="com.myspring.myapp.common.pagination.Pagination" alias="pagination" />
		<typeAlias type="com.myspring.myapp.board.vo.BoardVO" alias="boardVO" />
	</typeAliases>
	
</configuration>